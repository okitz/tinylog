{
  "name": "MQTT Server",
  "dockerComposeFile": ["./compose.yml"],
  "service": "app",
  "workspaceFolder": "/app",
  "overrideCommand": true,
  "postCreateCommand": "go mod tidy",
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "golangci.golangci-lint",
        "ms-vscode.go"
      ],
      "settings": {
        "terminal.integrated.inheritEnv": true,
        "terminal.integrated.defaultProfile.linux": "bash"  
      }
    }
  }
}